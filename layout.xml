<?xml version="1.0" encoding="utf-8"?>
<layout onVolumeUp="volume_up" onVolumeDown="volume_down" color="#0383DC" >
	<row>
		<!--  -->
		<button image="desk-lamp.png" onTap="toggle_desk_lamp" />
		<button image="fan.png" onTap="toggle_fan" />
		<button icon="window" onTap="turn_off_monitor" />
	</row>
	<row>
		<slider id='slider' text="Ceiling Lights" progress="50" progressmax="100" onchange="change_ceiling" />
	</row>
	<row>
		<button icon="vdown" onTap="volume_down" />
		<button icon="vmute" onTap="volume_mute" />
		<button icon="vup" onTap="volume_up" />
	</row>
	<row>	  
		<button icon="previous" onTap="previous" />
		<button icon="stop" onTap="stop" />
		<button icon="playpause" onTap="play_pause" />
		<button icon="next" onTap="next" />	
	</row>
</layout>